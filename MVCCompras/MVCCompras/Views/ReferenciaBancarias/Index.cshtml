@model IEnumerable<MVCCompras.Models.ReferenciaBancaria>

@{
    ViewBag.Title = "Index";
}
@if (ViewBag.Message != null)
{
    <span id="mensaje" style="display:none;">@ViewBag.Message</span>
}


<section id="main-content">
    <section class=" wrapper">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-institution"></i>Catálogo de Referencias Bancarias</h3>
        </div>
    </section>
    <div class="panel">
        <div class="col-lg-12 ">
            <table class="table table-bordered table-striped table-advance table-hover ">
                <tr>
                    <th>
                        <i class="fa fa-user"></i> Alias Proveedor
                    </th>
                    <th>
                        <i class="fa fa-institution"></i>  Banco
                    </th>
                    <th>
                        <i class="fa fa-bank"></i> Cuenta
                    </th>
                    <th>
                        <i class="fa fa-bank"></i> CLABE
                    </th>

                    <th>
                        <i class="fa fa-money"></i> Moneda
                    </th>

                    <th>
                        <i class="fa fa-check-square-o"></i> Activo
                    </th>
                    <th><i class="fa fa-cogs"></i> Acciones</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Proveedor.Alias)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bancos.Alias)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cuenta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Clabe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Moneda.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstaActivo)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ReferenciaBancariaID }, new { @class = "btn  btn-warning" })
                            @*@Html.ActionLink("Details", "Details", new { id = item.ReferenciaBancariaID }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.ReferenciaBancariaID }, new { @class = "btn  btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-lg-3">
            <div class="btn btn-success">
                @Html.ActionLink("Ingresar Nuevo", "Create")
            </div>
        </div>
    </div>
</section>
<script>
  $(document).ready(function () {
    if ($("#mensaje").text() == "Banco Agregado") {
      var msg = $("#mensaje").html();
      swal("Exitoso!!", msg, "success");
    }
    if ($("#mensaje").html().length > 0) {
      var msg = $("#mensaje").html();
      swal("Exitoso!", msg, "success");
    }
  });
</script>