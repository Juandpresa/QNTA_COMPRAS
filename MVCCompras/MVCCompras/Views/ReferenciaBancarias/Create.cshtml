@model MVCCompras.Models.ReferenciaBancaria

@{
    ViewBag.Title = "Create";
}
@if (ViewBag.Message != null)
{
    <span id="mensaje" style="display:none;">@ViewBag.Message</span>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section id="main-content">
        <section class=" wrapper">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-money"></i>Ingresar Nueva Referencia Bancaria</h3>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <section class="panel">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="pull-left"><h4>Referencia Bancaria</h4></div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="panel-body">
                                <div class="padd">
                                    <div class="form quick-post">
                                        <div class="form-horizontal">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.ProveedorID, "Proveedor", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.DropDownList("ProveedorID", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.ProveedorID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BancoID, "Banco", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.DropDownList("BancoID", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.BancoID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.MonedaID, "Moneda", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.DropDownList("MonedaID", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.MonedaID, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Nombre,"Nombre de la Rederencia", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Cuenta,"Cuenta", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Cuenta, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Cuenta, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Clabe,"CLABE", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.Clabe, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Clabe, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.EstaActivo,"Activo", htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    <div class="checkbox">
                                                        @Html.EditorFor(model => model.EstaActivo)
                                                        @Html.ValidationMessageFor(model => model.EstaActivo, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Crear" class="btn btn-success" />
                                                    <div class="btn  btn-danger">
                                                        @Html.ActionLink("Cancelar", "Index")
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                    </section>
                </div>
            </div>
        </section>
    </section>


}
<script>
    $(document).ready(function () {
        if ($("#mensaje").text() == "Hola") {
            var msg = $("#mensaje").html();
            swal("Exitoso!!", msg, "success");
        }
    });
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
