@model IEnumerable<MVCCompras.Models.Pagadora>

@{
    ViewBag.Title = "Index";
}

<section id="main-content">
    <section class=" wrapper">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-institution"></i>Catálogo de Pagadoras</h3>
        </div>
    </section>
</section>

<section id="main-content">
    <div class="panel">
        <div class="col-lg-12">
            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="fa fa-user"></i>
                            Alias Pagadora
                        </th>
                        <th><i class="fa fa-info-circle"></i>
                             Razon Social
                        </th>
                        <th><i class="fa fa-check-square-o"></i>
                             Activo
                        </th>
                        <th><i class="fa fa-cogs"></i>
                             Acciones
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alias)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RazonSocial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstaActivo)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.PagadoraID }, new { @class = "btn  btn-warning" }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.PagadoraID }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.PagadoraID }, new { @class = "btn  btn-danger" })
                            </td>
                        </tr>
                    }

            </table>
        </div>
        <div class="col-lg-3">
            <div class="btn btn-success">
                @Html.ActionLink("Ingresar Nueva", "Create")
            </div>
        </div>

    </div>
</section>
