@model IEnumerable<MVCCompras.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<section id="main-content">
    <section class=" wrapper">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-users"></i>Catálogo de Clientes</h3>
        </div>
    </section>
    <div class="panel">
        <div class="col-lg-12 ">
            <table class="table table-bordered table-striped table-advance table-hover">
                <tr>
                    <th>
                        <i class="fa fa-institution"></i> Razon Social
                    </th>
                    <th>
                        <i class="fa fa-bookmark"></i> RFC
                    </th>
                    <th>
                        <i class="fa fa-map-marker"></i> Calle
                    </th>
                    <th>
                        <i class="fa fa-map-marker"></i> No. Exterior
                    </th>
                    <th>
                        <i class="fa fa-map-marker"></i> No. Interior
                    </th>
                    <th>
                        <i class="fa fa-map-marker"></i> Colonia
                    </th>
                    <th>
                        <i class="fa fa-map-marker"></i> Alcaldia
                    </th>
                    <th>
                        <i class="fa fa-map-marker"></i> Estado
                    </th>
                    <th>
                        <i class="fa fa-check-square-o"></i> Activo
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RazonSocial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RFC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Calle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroExterior)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroInterior)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Colonia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Alcaldia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstaActivo)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ClienteID }, new { @class = "btn  btn-warning" })
                            @*@Html.ActionLink("Details", "Details", new { id = item.ClienteID }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.ClienteID }, new { @class = "btn  btn-danger" +
                         "" })
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-lg-3">
            <div class="btn btn-success">
                @Html.ActionLink("Ingresar Nuevo", "Create")
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        if ($("#mensaje").text() == "Banco Agregado") {
            var msg = $("#mensaje").html();
            swal("Exitoso!!", msg, "success");
        }
        if ($("#mensaje").html().length > 0) {
            var msg = $("#mensaje").html();
            swal("Exitoso!", msg, "success");
        }
    });
</script>