@model MVCCompras.Models.ValidacionesRecuperarPassword
@{
  ViewBag.Title = "InicioRecuperar";
  Layout = null;
}

@using (Html.BeginForm("InicioRecuperar", "Usuarios", FormMethod.Post, new { @class = "login-form", role = "form" }))
{
  @Html.AntiForgeryToken()
  <section id="main-content">
    <section class=" wrapper">
      <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-money"></i>Ingresar Nueva Pagadora</h3>
      </div>
      <div class="row">
        <div class="col-lg-8">
          <section class="panel">
            <div class="panel panel-default">
              <div class="panel-heading">
                <div class="pull-left"><h4>Pagadora</h4></div>
                <div class="clearfix"></div>
              </div>
              <div class="panel-body">
                <div class="padd">
                  <div class="form quick-post">

                    <div class="form-horizontal">
                      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                      <div class="form-group">
                        <div class="col-md-10">
                          @Html.EditorFor(model => model.Correo, new { @class = "form-control" } )
                          @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                        </div>
                      </div>                        

                      <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                          <input type="submit" value="Recuperar" class="btn btn-success" />
                          <div class="btn btn-danger">
                            @Html.ActionLink("Cancelar", "InicioRecuperar")
                          </div>

                        </div>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </section>
  </section>

}


